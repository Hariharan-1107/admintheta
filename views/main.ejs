    th {
      background-color: #2c3e50;
      color: white;
      font-weight: bold;
      padding: 10px;
      text-align: left;
    }
  
    /* Set the style for table cells */
    td {
      border: 1px solid #ddd;
      padding: 10px;
    }
  
    /* Set the style for table row hover */
    tr:hover {
      background-color: #f5f5f5;
    }
    
    /* Set the style for the user information headings */
    h1, h2 {
      text-align: center;
      margin-top: 50px;
      margin-bottom: 20px;
    }
